<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe6e9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/tex_i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:background="#dfe6e9"
        android:contentDescription="@string/image_name"
        android:text="@string/title"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        tools:text="I am " />

    <TextView
        android:id="@+id/tex_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tex_i_am"
        android:layout_alignBottom="@+id/tex_i_am"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tex_i_am"
        android:layout_toRightOf="@+id/tex_i_am"
        android:text="@string/title1"
        android:textColor="#7f8c8d"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:text="poor" />

    <ImageView
        android:id="@+id/image_coal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tex_i_am"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/image_name"
        app:srcCompat="@drawable/coal" />

</RelativeLayout>
